<%- include('./partials/header') %>

<div class="w-full min-h-screen px-4 md:px-10 lg:px-20 py-10 flex flex-col lg:flex-row gap-10">
    <!-- Cart Items -->
    <div class="w-full lg:w-[40%] space-y-10">
        <% user.cart.forEach(function(item){ %>
            <div class="rounded-md overflow-hidden border shadow">
                <!-- Image Section -->
                <div class="w-full flex justify-center items-center h-52 bg-[<%= item.bgcolor %>]">
                    <img class="h-[12rem] object-contain" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
                </div>
                <!-- Title + Qty -->
                <div class="w-full flex flex-col sm:flex-row justify-between px-5 py-4 bg-[<%= item.panelcolor %>]">
                    <h3 class="text-xl sm:text-2xl mb-2 sm:mb-0"><%= item.name %></h3>
                    <div class="flex items-center gap-2">
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line cursor-pointer"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line cursor-pointer"></i>
                    </div>
                </div>
                <!-- Net Total -->
                <div class="flex justify-between items-center px-5 py-3 bg-[<%= item.textcolor %>]">
                    <h4 class="text-lg">Net Total</h4>
                    <h2 class="text-lg font-semibold">₹ <%= item.price %></h2>
                </div>
            </div>
        <% }) %>
    </div>

    <!-- Price Breakdown -->
    <div class="w-full lg:w-[60%]">
        <h3 class="text-xl font-semibold mb-5">Price Breakdown</h3>
        <div class="px-5 sm:px-10">
            <div class="flex justify-between mt-2 text-base sm:text-lg">
                <h4>Total MRP</h4>
                <h4>₹ <%= totalMRP %></h4>
            </div>
            <div class="flex justify-between mt-2 text-base sm:text-lg">
                <h4>Discount on MRP</h4>
                <h4>₹ <%= totalDiscount %></h4>
            </div>
            <div class="flex justify-between mt-2 text-base sm:text-lg">
                <h4>Platform Fee</h4>
                <h4>₹ 20</h4>
            </div>
            <div class="flex justify-between mt-2 text-base sm:text-lg">
                <h4>Shipping Fee</h4>
                <h4 class="text-green-600 font-medium">FREE</h4>
            </div>
        </div>
        <div class="w-full h-[1px] bg-gray-300 mt-10"></div>
        <div class="flex justify-between items-center mt-5 px-5 sm:px-10">
            <h3 class="text-xl font-semibold">Total Amount</h3>
            <h3 class="text-xl font-bold text-green-600">₹ <%= final %></h3>
        </div>
        <form action="" class="mt-5 px-5 sm:px-10">
            <button type="submit" class="w-full py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-md text-lg transition-all">Proceed to Checkout</button>
        </form>
    </div>
</div>

<%- include('./partials/footer') %>
