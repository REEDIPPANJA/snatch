<%- include('./partials/header') %>

<% if(success.length > 0){ %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-blue-500 z-50">
        <span class="text-white"><%= success %></span>
    </div>
<% } %>

<% if(error.length > 0){ %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500 z-50">
        <span class="text-white"><%= error %></span>
    </div>
<% } %>

<div class="w-full min-h-screen flex flex-col lg:flex-row px-4 md:px-12 lg:px-20 py-10 gap-10 lg:gap-0">
    <!-- Register -->
    <div class="w-full lg:w-1/2 flex items-center justify-center">
        <div class="w-full max-w-md">
            <h3 class="text-3xl md:text-4xl mb-1">Welcome to <span class="text-blue-400 font-semibold">Scatch</span></h3>
            <h4 class="text-xl md:text-2xl mb-5">Create your account</h4>
            <form autocomplete="off" action="/users/register" method="post">
                <input class="bg-zinc-100 w-full px-3 py-2 border border-zinc-200 rounded-md mb-3" type="text" placeholder="Full Name" name="fullName">
                <input class="bg-zinc-100 w-full px-3 py-2 border border-zinc-200 rounded-md mb-3" type="email" placeholder="Email" name="email">
                <input class="bg-zinc-100 w-full px-3 py-2 border border-zinc-200 rounded-md mb-3" type="password" placeholder="Password" name="password">
                <input class="w-full bg-blue-500 text-white py-3 rounded-full mt-2 cursor-pointer" type="submit" value="Create My Account">
            </form>
        </div>
    </div>

    <!-- Login -->
    <div class="w-full lg:w-1/2 flex items-center justify-center">
        <div class="w-full max-w-md">
            <h4 class="text-xl md:text-2xl capitalize mb-5">Login to your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input class="bg-zinc-100 w-full px-3 py-2 border border-zinc-200 rounded-md mb-3" type="email" placeholder="Email" name="email">
                <input class="bg-zinc-100 w-full px-3 py-2 border border-zinc-200 rounded-md mb-3" type="password" placeholder="Password" name="password">
                <input class="w-full bg-blue-500 text-white py-3 rounded-full mt-2 cursor-pointer" type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
