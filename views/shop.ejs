<%- include('./partials/header') %>

<% if(typeof success !== 'undefined' && success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-blue-500 z-50">
        <span class="inline-block text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen flex flex-col lg:flex-row px-4 sm:px-10 lg:px-20 py-10 gap-10">

    <!-- Sidebar -->
    <div class="w-full lg:w-[25%] flex flex-col items-start">
        <!-- Sort Dropdown -->
        <div class="flex items-center gap-2 mb-8">
            <h3 class="text-base font-medium">Sort by:</h3>
            <form action="/shop">
                <select class="border px-2 py-1 text-sm rounded-md" name="sortby">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>

        <!-- Links -->
        <div class="flex flex-col gap-5 text-sm">
            <div>
                <h4 class="font-semibold mb-2">Collections</h4>
                <a class="block mb-1 text-blue-600 hover:underline" href="">New Collection</a>
                <a class="block mb-1 text-blue-600 hover:underline" href="">All Products</a>
                <a class="block mb-1 text-blue-600 hover:underline" href="">Discounted Products</a>
            </div>
            <div class="mt-6">
                <h4 class="font-semibold mb-2">Filter by:</h4>
                <a class="block mb-1 text-blue-600 hover:underline" href="">Availability</a>
                <a class="block mb-1 text-blue-600 hover:underline" href="">Discount</a>
            </div>
        </div>
    </div>

    <!-- Product Grid -->
    <div class="w-full lg:w-[75%]">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-6">
            <% products.forEach(function(product){ %>
                <div class="w-full">
                    <!-- Image -->
                    <div class="w-full h-52 flex items-center justify-center rounded-md bg-[<%= product.bgcolor %>]">
                        <img class="h-[10rem] object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                    </div>

                    <!-- Details -->
                    <div class="flex justify-between items-center px-4 py-3 rounded-md bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>] mt-2">
                        <div>
                            <h3 class="text-base font-medium"><%= product.name %></h3>
                            <h4 class="text-sm">â‚¹ <%= product.price %></h4>
                        </div>
                        <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white shadow-md hover:bg-gray-100 transition-all" href="/addtocart/<%= product._id %>">
                            <i class="ri-add-line"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
